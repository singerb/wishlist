{
    "compilerOptions": {
        "outDir":             "./dist/js",
        "allowJs":            true,
        "target":             "es5",
        "strict":             true,
        "noUnusedLocals":     true,
        "noUnusedParameters": true,
        "module":             "commonjs",
        "moduleResolution":   "node",
        "lib":                [ "dom", "es5", "es2015" ],
        "esModuleInterop":    true,
        "types": [
            "vue-typescript-import-dts"
        ]
    },
    "include":         [
        "./src/**/*"
    ]
}