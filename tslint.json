{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "await-promise": true,
        "curly": [ true, "ignore-same-line" ],
        "member-ordering": false,
        "no-console": false,
        "no-duplicate-super": true,
        "no-duplicate-switch-case": true,
        "no-empty": true,
        "no-floating-promises": true,
        "no-for-in-array": true,
        "no-return-await": true,
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-string-throw": true,
        "no-unsafe-finally": true,
        "no-unused-expression": true,
        "no-var-keyword": true,
        "no-void-expression": true,
        "only-arrow-functions": [true, "allow-declarations", "allow-named-functions"],
        "radix": true,
        "switch-default": true,

        "indent": [ true, "tabs", 1 ],
        "interface-name": false,
        "linebreak-style": [ true, "LF" ],
        "prefer-const": true,
        "trailing-comma": [ true, { "multiline": "always", "singleline": "never" } ],
        "align": [ true, "parameters", "arguments", "members", "elements" ],
        "arrow-return-shorthand": true,
        "newline-before-return": true,
        "new-parens": true,
        "no-consecutive-blank-lines": true,
        "no-trailing-whitespace": true,
        "no-unnecessary-callback-wrapper": true,
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "one-line": [ true, "check-catch", "check-finally", "check-else", "check-open-brace" ],
        "object-literal-sort-keys": false,
        "object-literal-key-quotes": [true, "as-needed"],
        "object-literal-shorthand": false,
        "ordered-imports": false,
        "semicolon": [ true, "always" ],
        "space-within-parens": [ true, 1 ],
        "variable-name": [ true, "ban-keywords", "check-format" ],
        "whitespace": [ true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type", "check-typecast", "check-preblock" ]
    },
    "rulesDirectory": []
}